<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bookviewer">
    <!-- adding internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookViewer"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activites.fragments.FavFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.ViewBookFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.SelfDevelopmentFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.TechnologyFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.NovelsFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.HomeFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.SettingFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.ProfileFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.ContactUsFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.AboutUsFragment"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".view.activites.fragments.LogOutFragment"
            android:exported="false"
            tools:ignore="Instantiatable,MissingClass" />
        <activity
            android:name=".view.activites.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.activites.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.activites.LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>