<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activites.fragments.ViewBookFragment">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <com.google.android.material.card.MaterialCardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="12dp"
              app:cardCornerRadius="12dp"
              android:id="@+id/BookCardView2">
              <GridLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:columnCount="2">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/book_name"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:textColor="@color/blue"
                      android:textSize="16sp"
                      android:layout_gravity="fill_horizontal"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/bookName2"
                      android:text="@string/book_name"
                      android:padding="1dp"
                      android:layout_margin="5dp"
                      android:layout_gravity="fill_horizontal"
                      android:textColor="@color/black"
                      android:textSize="13sp"
                      android:textStyle="bold"


                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/author_name"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:textColor="@color/blue"
                      android:textSize="16sp"
                      android:layout_gravity="fill_horizontal"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/AuthorName"
                      android:text="@string/author_name"
                      android:padding="1dp"
                      android:layout_margin="5dp"
                      android:layout_gravity="fill_horizontal"
                      android:textColor="@color/black"
                      android:textSize="13sp"
                      android:textStyle="bold"

                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/year"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:textColor="@color/blue"
                      android:textSize="16sp"
                      android:layout_gravity="fill_horizontal"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/YearOfBook"
                      android:text="@string/year"
                      android:padding="1dp"
                      android:layout_margin="5dp"
                      android:layout_gravity="fill_horizontal"
                      android:textColor="@color/black"
                      android:textSize="13sp"
                      android:textStyle="bold"
                      android:singleLine="false"


                      />
                  <ImageView
                      android:id="@+id/bookImage2"
                      android:src="@drawable/book_background"
                      android:layout_width="200dp"
                      android:layout_height="200dp"
                      android:layout_margin="15dp"
                      android:layout_gravity="center"
                      android:layout_columnSpan="2"/>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/description"
                      android:padding="5dp"
                      android:layout_margin="5dp"
                      android:textColor="@color/blue"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:layout_gravity="fill_horizontal"
                      android:layout_columnSpan="2"/>

                  <TextView
                      android:id="@+id/DescOfBook"
                      android:layout_width="wrap_content"
                      android:layout_height="250dp"
                      android:layout_columnSpan="2"
                      android:layout_gravity="fill_horizontal"
                      android:layout_margin="5dp"
                      android:padding="4dp"
                      android:text="@string/description"
                      android:textColor="@color/black"
                      android:textSize="13sp"
                      android:textStyle="bold"

                      />

              </GridLayout>

          </com.google.android.material.card.MaterialCardView>

      </LinearLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>